{
  "name": "task-management-backend",
  "version": "1.0.0",
  "description": "Backend API for Task Management System with Gamification",
  "main": "dist/src/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/main.js",
    "start:dev": "ts-node src/main.ts",
    "start:pm2": "pm2 start ecosystem.config.js --env production",
    "start:pm2:dev": "pm2 start ecosystem.config.js --env development",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js",
    "delete:pm2": "pm2 delete ecosystem.config.js",
    "logs:pm2": "pm2 logs",
    "monit:pm2": "pm2 monit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "backup:create": "node scripts/backup.js create",
    "backup:restore": "node scripts/backup.js restore",
    "backup:list": "node scripts/backup.js list",
    "backup:cleanup": "node scripts/backup.js cleanup",
    "backup:schedule": "node scripts/backup-scheduler.js start",
    "backup:manual": "node scripts/backup-scheduler.js manual",
    "backup:status": "node scripts/backup-scheduler.js status",
    "backup:stop": "node scripts/backup-scheduler.js stop"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.0",
    "node-cron": "^4.2.1",
    "redis": "^5.8.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.3.1",
    "@types/redis": "^4.0.10",
    "pm2": "^6.0.11",
    "prisma": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
